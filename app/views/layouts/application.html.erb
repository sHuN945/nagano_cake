<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale">
    <script src="https://kit.fontawesome.com/6fc63e45e1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navber-expand-lg navber-dark bg-dark">
        <div class="container">
          <a class="navber-brand" href="/">
            <span>NaganoCake</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon">三</span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <h3>ようこそ、<%= @customer.name %>さん!</h3>
                <li>
                  <%= link_to customer_path(current_customer), class: "nav-link text-light" do %>
                    マイページ
                  <%end %>
                </li>
                <li>
                  <%= link_to items_path, class: "nav-link text-light" do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to cart_items_path, method: :get,class: "nav-link text-light" do %>
                    カート
                  <% end %>
                </li>
                <li>
                  <%= link_to destroy_cuetomer_session_path, method: :delete, class: "nav-link text-light" do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li>
                  <%= link_to about_path, class: "nav-link text-light" do %>
                    About
                  <% end %>
                </li>
                <li>
                  <%= link_to items_path, class: "nav-link text-light" do %>
                    商品一覧
                  <% end %>
                </li>
                <li>
                  <%= link_to new_customer_registration_path, class: "nav-link text-light" do %>
                    新規登録
                  <% end %>
                </li>
                <li>
                  <%= link_to customer_session_path, class: "nav-link text-light" do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  </body>
  <main>
    <%= yield %>
  </main>
  <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p></p>
          </div>
        </div>
      </div>
    </footer>
</html>

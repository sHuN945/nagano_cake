<div>
  <%= flash[:notice] %>
</div>
<div class="col-md-8 offset-md-1">
  <h2>注文情報入力</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <h3>支払方法</h3>
          <%= f.radio_button :payment_method, "credit_card" %>
          <%= f.label :payment_method_credit_card, "クレジットカード" %>

          <%= f.radio_button :payment_method, "transfer" %>
          <%= f.label :payment_method_transfer, "銀行振込" %>
        </td>
        <td>
          <h3>お届け先</h3>
          <%= f.radio_button :address, "current_customer_address" %>
          <%= f.label :current_customer_address, "ご自身の住所" %>

          <%= f.radio_button :address, "customer_address" %>
          <%= f.label :customer_address, "登録済み住所から選択" %>
          <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>

          <%= f.radio_button :new_address, "new_address" %>
          <%= f.label :current_customer_address, "新しいお届け先" %>
          <div class="field">
            <%= f.label :郵便番号 %>
            <em>(ハイフンなし)</em>
            <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
          </div>
          <div class="field">
            <%= f.label :住所 %>
            <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
          </div>
          <div class="field">
            <%= f.label :宛名%>
            <%= f.text_field :name, autofocus: true %>
          </div>
        </td>
        <td><%= link_to '確認画面へ進む',confirm_path, method: :post, class: "btn btn-sm btn-success" %></td>
      </tr>
    </tbody>
  </table>
</div>
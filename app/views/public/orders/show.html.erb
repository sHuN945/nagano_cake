<div class="col-md-7 offset-md-1">
  <h2>注文履歴詳細</h2>
  <table class="table table-hobver table-inverse">
    <tbody>
      <tr>
        <td>注文日</td>
        <td><%= @order.created_at %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td>
          〒<%= @order.postal_code %></br>
          <%= @order.address %></br>
          <%= @order.name %>
        </td>
      </tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="col-md-3 offset-md-1">
  <h2>請求情報</h2>
  <table class="table table-hobver table-inverse">
    <tbody>
      <tr>
        <td>商品合計</td>
        <td><%= (@order.total_payment - @order.postage).to_s(:delimited) %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="col-md-8 offset-md-1">
  <h2>注文内容</h2>
  <table class="table table-hobver table-inverse">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
        <th colspan="4"></th>
      </tr>
    </thead>

    <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= (order_detail.price * 1.1).floor.to_s(:delimited) %></td>
        <td><%= order_detail.quantity %></td>
        <td><%= (order_detail.price * order_detail.quantity * 1.1).floor.to_s(:delimited) %></td>
      </tr>
    <% end %>
  </table>
</div>
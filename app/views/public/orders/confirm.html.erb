<div class="col-md-8 offset-md-1">
  <h2>注文情報確認</h2>
  <table class="table table-hobver table-inverse">
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>

    <% @items.each do |item| %>
      <tr>
        <td>
          <%= image_tag @item.get_profile_image(50,50) %>
          <%= @item.name %>
        </td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= @item.amount %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
      <tr>
        <td>
          <% @合計金額 +=  cart_item.subtotal %>
        </td>
      </tr>
    <% end %>
    <h2>支払方法</h2>
    <td><%= @customer_payment_method %></td>
    <h2>お届け先</h2>
    <td><%= @customer_address %></td>
  </table>
  <%= link_to '注文を確定する',completed_path, class: 'btn btn-secondary' %>
</div>

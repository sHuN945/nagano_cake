<h2><%= @customer.name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

  <h3>
    会員ID
    <%= @customer.id %>
  </h3>
  
  <div class="field">
    <%= f.label :名前 %>
    <em>(姓)</em>
    <%= f.text_field :last_name, autofocus: true, id:"customer_last_name", placeholder:"名前" %>
    <em>(名)</em>
    <%= f.text_field :first_name, autofocus: true, id:"customer_first_name", placeholder:"名前" %>
  </div>
  
  <div class="field">
    <%= f.label :フリガナ %>
    <em>(セイ)</em>
    <%= f.text_field :last_name_kana, autofocus: true, id:"customer_last_name_kana", placeholder:"名前" %>
    <em>(メイ)</em>
    <%= f.text_field :first_name_kana, autofocus: true, id:"customer_first_name_kana", placeholder:"名前" %>
  </div>
  
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, id:"customer_email" %>
  </div>
  
  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true, id:"customer_postal_code" %>
  </div>
  
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, id:"customer_address" %>
  </div>
  
  <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true, id:"customer_telephone_number" %>
  </div>
  
  <div class="field">
    <h3>会員ステータス</h3>
  </div>



  <div class="actions">
    <%= f.submit '変更を保存', class:'btn btn-secondary' %>
  </div>
<% end %>
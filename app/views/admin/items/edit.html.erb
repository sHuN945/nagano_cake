<% if @item.errors.any? %>
  <div id="error_explanation">
    <h2><%= @item.errors.count %> error prohibited this obj from being saved:</h2>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品編集</h2>

      <%= form_with model: @item, url: item_path(@item.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :商品画像 %><br>
          <%= f.file_field :item_image, placeholder: "商品画像", accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <%= f.label :商品名 %><br>
          <%= f.text_field :name, autofocus: true, id:"item_name", placeholder:"商品名"%>
        </div>
        
        <div class="form-group">
          <%= f.label :商品説明 %><br>
          <%= f.text_area :introduction, autofocus: true, id:"item_introduction" %>
        </div>
        
        <div class="form-group">
          <%= f.label :税抜価格 %><br>
          <%= f.text_field :price, autofocus: true, id:"item_price", placeholder:"税抜価格"%>
        </div>
        
        <div class="form-group">
          <%= f.submit '変更を保存', class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
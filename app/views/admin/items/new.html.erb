<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>商品新規登録</h2>

      <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <%= f.label :商品画像 %><br>
          <%= f.file_field :item_image, placeholder: "商品画像", accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <%= f.label :商品名 %><br>
          <%= f.text_field :item_name, autofocus: true, id:"item_name", placeholder:"名前"%>
        </div>
        
        <div class="form-group">
          <%= f.label :商品説明 %><br>
          <%= f.text_area :introduction, autofocus: true, id:"item_introduction" %>
        </div>
        
        <div class="form-group">
          <%= f.label :税抜価格 %><br>
          <%= f.text_field :price, autofocus: true, id:"price", placeholder:"price"%>
        </div>
        
        <div class="form-group">
          <%= f.submit '新規登録', class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
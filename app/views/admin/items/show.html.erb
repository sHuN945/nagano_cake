<div class="col-md-8 offset-md-1">
  <h2>商品詳細</h2>
  <table class="table">
    <thead>
      <tr>
        <th>商品名</th>
        <th>商品説明</th>
        <th>
          税込価格<br />
          (税抜価格)
        </th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= image_tag @item.get_profile_image(100,100) %></td>
          <td><%= @item.name %></td>
          <td><%= @item.introduction %></td>
          <td><%= @item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<div class="col-md-8 offset-md-1">
  <h2>商品一覧</h2>
  <div class="actions">
     <%= link_to '新規商品',new_admin_item_path, class: "btn btn-success" %>
  </div>
  <table class="table table-hobver table-inverse">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to item.name, admin_item_path(item.id) %></td>
          <td><%= item.price %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
</div>